pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID = credentials('ACESS_KEY')
        AWS_SECRET_ACCESS_KEY = credentials('SECRET_KEY')
        AWS_DEFAULT_REGION = 'us-east-1'
    }
    
    stages {
        stage('Initializing Terraform') {
            steps {
                script {
                    dir('terraform') {
                        sh 'terraform init'
                    }
                }
            }
        }
        stage('Validating Terraform') {
            steps {
                script {
                    dir('terraform') {
                        sh 'terraform validate'
                    }
                }
            }
        }
        stage('Previewing the infrastructure') {
            steps {
                script {
                    dir('terraform') {
                        sh 'terraform plan'
                    }
                }
            }
        }
        stage('Create/Destroy an EKS cluster') {
            steps {
                script {
                    dir('terraform') {
                        sh 'terraform apply --auto-approve'
                    }
                }
            }
        }
    }
    post {
        success {
            script {
            dir('terraform') {
                dir('terraform') {
                    // Retrieve the RDS endpoint as a JSON output
                    def rdsEndpoint = sh(script: 'terraform output -json rds_endpoint', returnStdout: true).trim()
                    
                    // Extract the RDS endpoint from the JSON output
                    def json = readJSON text: rdsEndpoint
                    def endpoint = json.value // Adjust the key based on your output structure

                    // Pass the RDS endpoint to the 'RDS-pipeline' job
                    build job: 'RDS-pipeline', wait: true, parameters: [string(name: 'RDS_ENDPOINT', value: endpoint)]
                    }
                }
            }
        }
    }
}


